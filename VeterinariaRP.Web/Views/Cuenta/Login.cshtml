@model VeterinariaRP.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<br />
<div class="row">
    <div class="clo-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="NombreUsuario">Usuario</label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-warning"></span>
            </div>
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <div class="form-group">
                <label asp-for="Password">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input asp-for="Recordarme" type="checkbox"/>
                &nbsp;&nbsp;
                <label asp-for="Recordarme" class="form-check-label">Recordarme</label>
                <span asp-validation-for="Recordarme" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
                <a asp-action="Registrarse" class="btn btn-primary">Registrarse</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}