@model VeterinariaRP.Web.Models.MascotaViewModel

@{
    ViewData["Title"] = "Nueva Mascota";
}

<h2>Nueva Mascota</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMascota" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PropietarioId" />
            <partial name="_Mascota" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" /> |
                <a asp-action="Details" asp-route-id="@Model.PropietarioId" class="btn btn-danger">Volver</a>
            </div>
        </form>
    </div>
</div>