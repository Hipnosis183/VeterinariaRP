@model VeterinariaRP.Web.Models.HistoriaViewModel

@{
    ViewData["Title"] = "Nueva Historia";
}

<h2>Nueva Historia</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddHistoria" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MascotaId" />
            <partial name="_Historia" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" /> |
                <a asp-action="DetailsMascota" asp-route-id="@Model.MascotaId" class="btn btn-danger">Volver</a>
            </div>
        </form>
    </div>
</div>